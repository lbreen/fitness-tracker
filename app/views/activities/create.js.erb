<% if @activity.errors.any? %>
  console.log('<%= @activity.errors %>');
<% else %>
  $('#newActivityModal').modal('hide');
  var activities_list = $("<%= j render 'shared/exercise_results', exercise: @exercise, activities: @activities, activity: @activity %>").hide();
  var list_item = activities_list[0].lastElementChild;
  $("#activities-list").append(list_item);
  list_item.slideDown();
<% end %>
